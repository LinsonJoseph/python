def main():
    bible_verse = input("Enter a Bible verse: ")

    word_of_God(bible_verse)
    word_of_God(bible_verse, '*')
    word_of_God(border_char = '#', bible_verse = "And Noah begat three sons, Shem, Ham, and Japheth.")

def word_of_God(bible_verse, border_char = '-'):
    border = border_char * len(bible_verse)
    print()
    print(border)
    print(bible_verse)
    print(border)
    
main()
